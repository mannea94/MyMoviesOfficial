<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.technology.manne.mymovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/movies_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.technology.manne.mymovies.MainDrawerActivity"
            android:label="@string/explorer"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.technology.manne.mymovies.Activities.LoginActivity"
            android:label="@string/login"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technology.manne.mymovies.Activities.MovieDetailsActivity"
            android:label="@string/movie_details"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technology.manne.mymovies.Activities.ExploreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technology.manne.mymovies.Activities.FavouritesActivity"
            android:label="@string/favourites"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technology.manne.mymovies.Activities.RatedActivity"
            android:label="@string/rated"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.technology.manne.mymovies.Activities.WatchlistActivity"
            android:label="@string/watchlist"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technology.manne.mymovies.Activities.PeopleActivity"
            android:label="@string/people"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technology.manne.mymovies.Activities.PeopleDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technology.manne.mymovies.Activities.FullCastActivity"
            android:label="@string/cast"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.technology.manne.mymovies.Activities.FullCrewActivity"
            android:label="@string/crew"
            android:screenOrientation="portrait" />
        <activity android:name="com.technology.manne.mymovies.Activities.ImageActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity android:name="com.technology.manne.mymovies.Activities.FragmentActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>